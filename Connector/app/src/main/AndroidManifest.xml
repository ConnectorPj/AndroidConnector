<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.web.connector">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".IntroActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WebActivity"></activity>
        <!-- theme 는 상수꺼 -->
        <activity android:name=".MainActivity"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar"></activity>
        <activity android:name=".TutorialActivity"></activity>
        <activity android:name=".SignUpActivity"></activity>
        <activity android:name=".SignInActivity"></activity>
        <activity android:name=".MainPageActivity"></activity>

        <!-- 상수 -->
        <activity
            android:name=".ProfileActivity"
            android:label="내 정보"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar" />
        <activity
            android:name=".NoticeActivity"
            android:label="공지사항"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar" />
        <activity
            android:name=".SettingsActivity"
            android:label="설정"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".MadeByActivity"
            android:label="개발자 정보"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
            <intent-filter>
                <action android:name="MadeByActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>